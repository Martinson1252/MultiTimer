<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A3A3A3"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#292929"
        android:clipToPadding="false"
        android:fillViewport="true"
        android:gravity="center"
        android:orientation="vertical">

        <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:baselineAligned="false"
                android:gravity="center_horizontal"
                android:minHeight="160dp"
                android:visibility="visible"
                tools:visibility="visible">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="155dp"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:background="#800C0909"
                    android:minWidth="50dp"
                    android:orientation="vertical">

                    <ImageButton
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#424242"
                        app:srcCompat="@android:drawable/ic_menu_delete" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="155dp"
                    android:layout_gravity="bottom"
                    android:layout_weight="0"
                    android:background="#800C0909"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:gravity="center"
                        android:tag="name"
                        android:text="Timer Name"
                        android:textColor="#ACACAC"
                        android:textColorHint="#00000000"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        tools:ignore="TouchTargetSizeCheck" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="5dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-black"
                        android:gravity="center_horizontal"
                        android:tag="time"
                        android:text="12:00"
                        android:textColor="#FFFFFF"
                        android:textSize="34sp" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="5dp" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/round_button"
                        android:text="Start"
                        android:textColor="#FFFFFF"
                        android:textSize="24sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="155dp"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:background="#800C0909"
                    android:gravity="right"
                    android:minWidth="50dp"
                    android:orientation="vertical">

                    <ImageButton
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layerType="none"
                        android:backgroundTint="#424242"
                        app:srcCompat="@android:drawable/ic_menu_edit"
                        tools:ignore="SpeakableTextPresentCheck" />

                </LinearLayout>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:baselineAligned="false"
                android:gravity="center_horizontal"
                android:minHeight="160dp"
                android:visibility="visible"
                tools:visibility="visible">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="155dp"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:background="#800C0909"
                    android:minWidth="50dp"
                    android:orientation="vertical">

                    <ImageButton
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#424242"
                        app:srcCompat="@android:drawable/ic_menu_delete" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="155dp"
                    android:layout_gravity="bottom"
                    android:layout_weight="0"
                    android:background="#800C0909"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:gravity="center"
                        android:tag="name"
                        android:text="Timer Name"
                        android:textColor="#ACACAC"
                        android:textColorHint="#00000000"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        tools:ignore="TouchTargetSizeCheck" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="5dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-black"
                        android:gravity="center_horizontal"
                        android:tag="time"
                        android:text="12:00"
                        android:textColor="#FFFFFF"
                        android:textSize="34sp" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="5dp" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/round_button"
                        android:text="Start"
                        android:textColor="#FFFFFF"
                        android:textSize="24sp"
                         />
<!--app:iconGravity="top"-->
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="155dp"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:background="#800C0909"
                    android:gravity="right"
                    android:minWidth="50dp"
                    android:orientation="vertical">

                    <ImageButton
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layerType="none"
                        android:backgroundTint="#424242"
                        app:srcCompat="@android:drawable/ic_menu_edit"
                        tools:ignore="SpeakableTextPresentCheck" />

                </LinearLayout>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:baselineAligned="false"
                android:gravity="center_horizontal"
                android:minHeight="160dp"
                android:visibility="visible"
                tools:visibility="visible">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="155dp"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:background="#800C0909"
                    android:minWidth="50dp"
                    android:orientation="vertical">

                    <ImageButton
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#424242"
                        app:srcCompat="@android:drawable/ic_menu_delete" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="155dp"
                    android:layout_gravity="bottom"
                    android:layout_weight="0"
                    android:background="#800C0909"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:gravity="center"
                        android:tag="name"
                        android:text="Timer Name"
                        android:textColor="#ACACAC"
                        android:textColorHint="#00000000"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        tools:ignore="TouchTargetSizeCheck" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="5dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-black"
                        android:gravity="center_horizontal"
                        android:tag="time"
                        android:text="12:00"
                        android:textColor="#FFFFFF"
                        android:textSize="34sp" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="5dp" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/round_button"
                        android:text="Start"
                        android:textColor="#FFFFFF"
                        android:textSize="24sp" />
<!--app:icon="@android:drawable/ic_media_play"-->
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="155dp"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:background="#800C0909"
                    android:gravity="right"
                    android:minWidth="50dp"
                    android:orientation="vertical">

                    <ImageButton
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layerType="none"
                        android:backgroundTint="#424242"
                        app:srcCompat="@android:drawable/ic_menu_edit"
                        tools:ignore="SpeakableTextPresentCheck" />

                </LinearLayout>

            </TableRow>

        </TableLayout>
    </ScrollView>

    <!-- Add timer window -->

    <TableRow
        android:id="@+id/add_timer_window"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_gravity="center_horizontal|center_vertical"
        android:background="#000000"
        android:orientation="horizontal"
        android:visibility="gone"
        tools:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/stroke_panel"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_horizontal|center_vertical"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:background="#007A7A7A"
                    android:text="Add Timer"
                    android:textColor="#939393"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    tools:text="Add Timer" />
            </LinearLayout>

            <EditText
                android:id="@+id/AddTimerTimeName"
                android:layout_width="220dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:ems="10"
                android:hint="Timer name"
                android:inputType="text|time"
                android:textColor="#737373"
                android:textColorHint="#757575" />

            <EditText
                android:id="@+id/AddTimerTimeM"
                android:layout_width="220dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:ems="10"
                android:hint="Timer time minutes"
                android:inputType="time"
                android:textColor="#737373"
                android:textColorHint="#757575" />

            <EditText
                android:id="@+id/AddTimerTimeS"
                android:layout_width="220dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:ems="10"
                android:hint="Timer time"
                android:inputType="time"
                android:textColor="#737373"
                android:textColorHint="#757575" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:paddingBottom="6dp">

                <Button
                    android:id="@+id/add_timer_back"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_gravity="bottom|left"
                    android:background="@drawable/round_button"
                    android:text="Back"
                    android:textColor="#FFFFFF" />

                <Space
                    android:layout_width="42dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom" />

                <Button
                    android:id="@+id/add_new_timer"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_gravity="bottom|right"
                    android:background="@drawable/round_button"
                    android:inputType="number"
                    android:text="Apply"
                    android:textColor="#FFFFFF" />

            </LinearLayout>

        </LinearLayout>

    </TableRow>

    <!-- Timer modify window -->
    <TableRow
        android:id="@+id/modify_timer_window"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_gravity="center_horizontal|center_vertical"
        android:background="@drawable/stroke_panel"
        android:orientation="horizontal"
        android:visibility="gone"
        tools:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:outlineProvider="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_horizontal|center_vertical"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:background="#007A7A7A"
                    android:text="Timer"
                    android:textColor="#939393"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    tools:text="Timer" />

            </LinearLayout>

            <EditText
                android:id="@+id/timer_content_name_text"
                android:layout_width="220dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Name"
                android:textColor="#757575"
                android:textColorHint="#757575" />

            <EditText
                android:id="@+id/Timer_Input_time_min"
                android:layout_width="220dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:ems="10"
                android:hint="Timer minutes"
                android:inputType="time"
                android:numeric="integer"
                android:textColor="#737373"
                android:textColorHint="#757575" />

            <EditText
                android:id="@+id/Timer_Input_time_sec"
                android:layout_width="220dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:ems="10"
                android:hint="Timer seconds"
                android:inputType="numberDecimal"
                android:numeric="integer"
                android:textColor="#737373"
                android:textColorHint="#757575" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:paddingBottom="6dp">

                <Button
                    android:id="@+id/remove_timer_cancel"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_gravity="bottom|left"
                    android:background="@drawable/round_button"
                    android:text="Back"
                    android:textColor="#FFFFFF" />

                <Space
                    android:layout_width="42dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom" />

                <Button
                    android:id="@+id/remove_timer_confirm"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_gravity="bottom|right"
                    android:background="@drawable/round_button"
                    android:inputType="number"
                    android:text="Apply"
                    android:textColor="#FFFFFF" />


            </LinearLayout>

        </LinearLayout>
    </TableRow>

    <Button
        android:id="@+id/add"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="bottom|right"
        android:layout_margin="9dp"
        android:background="@drawable/circle"
        android:text="+"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        android:visibility="visible"
        app:iconPadding="12dp"
        tools:visibility="visible" />

    <TableRow
        android:id="@+id/deleteTimerWindow"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:background="@drawable/stroke_panel"
        android:visibility="gone"
        tools:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_horizontal|center_vertical"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:background="#007A7A7A"
                    android:text="Warning"
                    android:textColor="#939393"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    tools:text="Warning" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Are you sure you want to delete the timer?"
                    android:textAlignment="center"
                    android:textSize="24sp"
                    tools:text="Are you sure you want to delete the timer?" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:paddingBottom="6dp">

                <Button
                    android:id="@+id/removeTimerCancel"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_gravity="bottom|left"
                    android:background="@drawable/round_button"
                    android:text="Cancel"
                    android:textColor="#FFFFFF" />

                <Space
                    android:layout_width="42dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom" />

                <Button
                    android:id="@+id/removeTimerConfirm"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_gravity="bottom|right"
                    android:background="@drawable/round_button"
                    android:inputType="number"
                    android:text="Confirm"
                    android:textColor="#FFFFFF" />


            </LinearLayout>

        </LinearLayout>

    </TableRow>
